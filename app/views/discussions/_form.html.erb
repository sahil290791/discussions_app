<div class="h3 raleway"><%= controller.action_name.capitalize %> Discussion</div>
	<%= form_for @discussion, class: 'form' do |f| %>
		<div class="form-group">
			<label for="discussion_title"> Title :</label>
			<%= f.text_field :title, class: 'form-control', required: true %>
		</div>
		<div class="form-group">
			<label for="discussion_description"> Description :</label>
			<%= f.text_area :description, class: 'form-control', required: true %>
		</div>
		<div class="form-group">
			<label for="discussion_title"> Secret Key :</label>
			<%= f.text_field :secret_key, class: 'form-control', required: true %>
		</div>
		<div class="form-group">
			<% if controller.action_name == "new" %>
				<%= f.submit "CREATE", class: 'btn btn-success btn-sm' %>
			<% else %>	
				<%= f.submit "UPDATE", class: 'btn btn-success btn-sm' %>
			<% end %>	
		</div>		
	<% end %>